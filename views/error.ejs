<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-xl-5">
            <div class="error-page text-center">
                <div class="error-icon mb-4">
                    <i class="fas fa-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
                </div>
                
                <h1 class="error-title mb-3"><%= title || 'Error' %></h1>
                
                <p class="error-message text-muted mb-4">
                    <%= message || 'Something went wrong. Please try again later.' %>
                </p>
                
                <% if (error && error.stack && process.env.NODE_ENV === 'development') { %>
                    <div class="error-details">
                        <details class="mt-4">
                            <summary class="btn btn-outline-secondary btn-sm">Show Error Details</summary>
                            <div class="mt-3 p-3 bg-light rounded">
                                <pre class="text-start small"><%= error.stack %></pre>
                            </div>
                        </details>
                    </div>
                <% } %>
                
                <div class="error-actions mt-4">
                    <a href="/todos" class="btn btn-primary me-2">
                        <i class="fas fa-home me-2"></i>
                        Go to Dashboard
                    </a>
                    <button onclick="history.back()" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>
                        Go Back
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.error-page {
    padding: 2rem;
}

.error-title {
    color: #495057;
    font-weight: 600;
}

.error-message {
    font-size: 1.1rem;
    line-height: 1.6;
}

.error-details pre {
    font-size: 0.8rem;
    color: #dc3545;
    max-height: 200px;
    overflow-y: auto;
}
</style>
