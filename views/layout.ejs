<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="color-scheme" content="light">
    <title><%= title || 'Professional Todo App' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/todos">
                <i class="fas fa-tasks me-2"></i>
                TodoPro
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/todos">
                            <i class="fas fa-list me-1"></i>
                            All Tasks
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/todos/new">
                            <i class="fas fa-plus me-1"></i>
                            New Task
                        </a>
                    </li>
                </ul>
                <div class="navbar-nav">
                    <form class="d-flex me-2" action="/todos/search" method="GET">
                        <div class="input-group">
                            <input class="form-control form-control-sm" 
                                   type="search" 
                                   name="q" 
                                   placeholder="Search todos..." 
                                   value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                            <button class="btn btn-outline-light btn-sm" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <!-- Alerts -->
    <% if (typeof req !== 'undefined' && req.query.message) { %>
        <div class="alert alert-success alert-dismissible fade show m-0" role="alert">
            <div class="container">
                <i class="fas fa-check-circle me-2"></i>
                <%= req.query.message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    <% } %>
    <% if (typeof req !== 'undefined' && req.query.error) { %>
        <div class="alert alert-danger alert-dismissible fade show m-0" role="alert">
            <div class="container">
                <i class="fas fa-exclamation-circle me-2"></i>
                <%= req.query.error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="main-content">
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="footer bg-light border-top mt-auto">
        <div class="container py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <small class="text-muted">
                        Â© 2024 TodoPro. Built with Node.js & Express.
                    </small>
                </div>
                <div class="col-md-6 text-md-end">
                    <small class="text-muted">
                        <i class="fas fa-heart text-danger"></i>
                        Made with care
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/app.js"></script>
</body>
</html>
